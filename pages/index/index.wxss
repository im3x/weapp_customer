page {
  background-color: #edf3f5;
}
.header {
  padding: 10px 20px;
}
.header > text {
  font-size: 32px;
  font-weight: 300;
}

.nav-box {
  display: flex;
  flex-direction: row;
  margin: 20px; 
  background-color: #FFF;
  border-radius: 20px;
  overflow: hidden;
  box-shadow: 0 5px 30px -25px #999;
}
.nav-item {
  flex: 1;
  text-align: center;
  padding: 20px 0;
}
.nav-item > text {
  font-size: 14px;
  font-weight: 400;
  padding: 3px;
  color: #666;
}
.active > text {
  color: #3d65f3;
  font-weight: bold;
  border-radius: 3px;
  background-image: linear-gradient(180deg, #FFFFFF 0%, #FFFFFF 50%, #EAEEFD 50%, #EAEEFD 100%);
}

.body {
  padding: 0 20px;
  display: flex;
  flex-direction: column;
}
.body-item {
  flex: 1;
  padding: 20px;
  background-color: #FFF;
  border-radius: 15px;
  display: flex;
  margin-bottom: 20px;
}
.body-item > .left {
  width: 80px;
  height: 80px;
  overflow: hidden;
  border-radius: 10px;
}
.left > image {
  width: 100%;
  height: 100%;
}
.body-item > .center {
  flex: 1;
  margin: 0 10px;
  text-align: left;
  display: flex;
  flex-direction: column;
}
.center > .name {
  font-size: 16px;
  color: #333;
  font-weight: bold;
}
.center > .tips {
  font-size: 12px;
  font-weight: 300;
  color: #999;
}
.center > .desc {
  font-size: 14px;
  font-weight: 400;
  color: #666;
  padding: 10px 0;
}
.body-item > .right {
  width: 20px;
}
button {
  text-align: left;
}
button::after{
  border: none !important;
}
button:not([size='mini']) {
  width: 100% !important;
  margin-left: 0;
  margin-right: 0;
}
.keyword {
  color: #3d65f3;
  font-weight: bold;
}